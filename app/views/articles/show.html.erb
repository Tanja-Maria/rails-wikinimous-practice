<div class="container">

  <h1> <%= @article.title %> </h1>
  <%= link_to edit_article_path(@article), id:"edit-symbol" do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>

  <%= link_to article_path(@article), data: { turbo_method: :delete, confirm: "Are you sure?"}, id:"delete-symbol" do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>

  <hr>
  <p> <%= @article.content %> </p>
</div>
